appender.rolling.type = RollingFile
appender.rolling.name = rolling
appender.rolling.fileName = logs${sys:file.separator}application.log
appender.rolling.json.type  = JsonTemplateLayout
appender.rolling.json.eventTemplateUri = classpath:LogstashJsonEventLayoutV1.json
appender.rolling.json.locationInfoEnabled=true

appender.rolling.json.eventTemplateAdditionalField[0].type = EventTemplateAdditionalField
appender.rolling.json.eventTemplateAdditionalField[0].key = marker
appender.rolling.json.eventTemplateAdditionalField[0].value = {"$resolver": "marker", "field": "name"}
appender.rolling.json.eventTemplateAdditionalField[0].format = JSON

appender.rolling.filePattern = logs${sys:file.separator}application-%d{yyyy-MM-dd-HH-mm-ss}-%i.log
appender.rolling.policies.type = Policies
appender.rolling.policies.time.type = TimeBasedTriggeringPolicy
appender.rolling.policies.time.interval = 100
appender.rolling.policies.time.modulate = true
appender.rolling.policies.size.type = SizeBasedTriggeringPolicy
appender.rolling.policies.size.size = 20MB
